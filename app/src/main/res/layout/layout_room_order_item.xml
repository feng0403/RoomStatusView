<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/room_status_width"
    android:layout_height="@dimen/room_status_height"
    android:orientation="vertical"
    >

  <View
      android:layout_width="match_parent"
      android:layout_height="0.3px"
      android:background="#E7E7E7"
      />

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        android:visibility="gone"
        >

      <TextView
          android:id="@+id/order_count"
          android:layout_width="11dp"
          android:layout_height="11dp"
          android:layout_marginRight="1dp"
          android:background="@drawable/bg_order_count_tag"
          android:gravity="center"
          android:includeFontPadding="false"
          android:textColor="@color/color_accent"
          android:textSize="8sp"
          />

      <TextView
          android:id="@+id/order_type"
          android:layout_width="11dp"
          android:layout_height="11dp"
          android:background="@color/color_accent_red"
          android:gravity="center"
          android:includeFontPadding="false"
          android:text="æ—¶"
          android:textColor="@color/white"
          android:textSize="8sp"
          />

    </LinearLayout>

    <TextView
        android:id="@+id/guest_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="12dp"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:textColor="@color/text_dark"
        android:textSize="13sp"
        />

    <TextView
        android:id="@+id/channel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/guest_name"
        android:layout_marginLeft="4dp"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:textColor="@color/text_dark"
        android:textSize="10sp"
        />

  </RelativeLayout>

  <View
      android:layout_width="match_parent"
      android:layout_height="0.3px"
      android:background="#E7E7E7"
      />
</LinearLayout>